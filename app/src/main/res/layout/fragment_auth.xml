<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.silive.deepanshu.notestash.ui.auth.AuthFragment">
    <!-- TODO Design of page -->
    <Button
        android:id="@+id/auth_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login" />

    <Button
        android:id="@+id/auth_button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup" />

    <Button
        android:id="@+id/auth_button_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google" />

    <Button
        android:id="@+id/auth_button_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook" />

    <Button
        android:id="@+id/auth_button_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip" />

</LinearLayout>
